<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id='pharmacy_city_action_form' model='ir.actions.act_window'>
        <field name="name">Pharmacy City</field>
        <field name="res_model">pharmacy.city</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Pharmacy" id="pharmacy_main_menu" />
    <menuitem name="Cities" id="Pharmacy_city_menu" parent="pharmacy_main_menu" action="pharmacy_city_action_form"/>

    <record id="pharmacy_city_view_form" model="ir.ui.view">
        <field name="name">Pharmacy City Form</field>
        <field name="model">pharmacy.city</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="country_id"/>
                </group>
            </form>
        </field>
    </record>

    <record id="pharmacy_city_action_list" model="ir.ui.view">
        <field name="name">Pharmacy City List</field>
        <field name="model">pharmacy.city</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="country_id"/>
            </tree>
        </field>
    </record>
</odoo>

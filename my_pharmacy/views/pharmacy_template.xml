<odoo>
    <template id="pharmacy">
        <t t-name="website.layout">
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous"/>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free@6.4.0/css/all.min.css"/>
            <div class="bg-success p-5">
                <div class="card" style="min-height: 100vh;">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <a class="navbar-brand fw-bold text-success" href="#">
                            <i class="fa fa-notes-medical me-2"></i>PermaPharma</a>
                        <a class="btn btn-outline-success" href="http://localhost:8069/web/login">
                            <i class="fa-solid fa-download me-2"></i>Permanence File
                        </a>
                    </div>
                    <div class="card-body">
                        <div class="p-3 text-center">
                            <h1 class="card-title fw-bold display-4">Explore Daily Updated<br></br>Pharmacies on Permanence Duty</h1>
                            <p class="card-text lead">Find nearby pharmacies providing continuous health support when you need it most.</p>
                            <div class="mx-auto mb-3" style="max-width: 700px;">
                                <form class="form-inline" method="get" action="/pharmacy">
                                    <div class="input-group">
                                        <input type="text" class="form-control" placeholder="Search by pharmacy name, city..." name="search" aria-label="Search" t-att-value="search"/>
                                        <div class="input-group-append">
                                            <button type="submit" class="btn btn-success" onclick="this.form.action='/pharmacy?search=' + this.form.elements['search'].value + '&amp;search_in=Name&amp;city_filter=' + this.form.elements['city_filter'].value + '&amp;neighborhood_filter=' + this.form.elements['neighborhood_filter'].value + '&amp;permanence_filter=' + this.form.elements['permanence_filter'].value;">
                                                <i class="fa-solid fa-magnifying-glass me-2"></i>Search</button>
                                        </div>
                                    </div>
                                    <div class="mt-3">
                                        <div class="form-group mx-2 d-inline-block">
                                            <select class="form-select" name="city_filter" t-attf-onchange="this.form.action='/pharmacy?city_filter=' + this.value; this.form.submit();">
                                                <option value="">All Cities</option>
                                                <t t-foreach="cities" t-as="city">
                                                    <option t-att-value="city" t-if="city_filter == city" selected="selected">
                                                        <t t-esc="city"/>
                                                    </option>
                                                    <option t-att-value="city" t-else="">
                                                        <t t-esc="city"/>
                                                    </option>
                                                </t>
                                            </select>
                                        </div>
                                        <div class="form-group mx-2 d-inline-block">
                                            <select class="form-select" name="neighborhood_filter" t-attf-onchange="this.form.action='/pharmacy?neighborhood_filter=' + this.value; this.form.submit();">
                                                <option value="">All Neighborhoods</option>
                                                <t t-foreach="neighborhoods" t-as="neighborhood">
                                                    <option t-att-value="neighborhood" t-if="neighborhood_filter == neighborhood" selected="selected">
                                                        <t t-esc="neighborhood"/>
                                                    </option>
                                                    <option t-att-value="neighborhood" t-else="">
                                                        <t t-esc="neighborhood"/>
                                                    </option>
                                                </t>
                                            </select>
                                        </div>
                                        <div class="form-group mx-2 d-inline-block">
                                            <select class="form-select" name="permanence_filter" t-attf-onchange="this.form.action='/pharmacy?permanence_filter=' + this.value; this.form.submit();">
                                                <option value="">All Pharmacies</option>
                                                <t t-foreach="['permanence', 'noPermanence']" t-as="permanence_option">
                                                    <option t-att-value="permanence_option" t-if="permanence_filter == permanence_option" selected="selected">
                                                        <t t-esc="permanence_option"/>
                                                    </option>
                                                    <option t-att-value="permanence_option" t-else="">
                                                        <t t-esc="permanence_option"/>
                                                    </option>
                                                </t>
                                            </select>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>

                        <t t-if="not pharmacies">
                            <div class="card text-center">
                                <div class="card-body">
                                    <h2 class="card-title">No pharmacies found.</h2>
                                    <a href="http://localhost:8069/pharmacy" class="btn btn-success">
                                        <i class="fa-solid fa-filter-circle-xmark me-2"></i>Clear all filters
                                    </a>
                                </div>
                            </div>
                        </t>
                        <t t-else="">
                            <div class="card-deck mt-2 row row-cols-1 row-cols-md-4 g-4">
                                <t t-foreach="pharmacies" t-as="pharmacy">
                                    <div class="col">
                                        <a t-attf-href="/pharmacy/detail/#{pharmacy.id}" class="text-reset text-decoration-none card mb-3 h-100 d-flex flex-fill position-relative">
                                            <span class="badge rounded-pill bg-success position-absolute top-0 start-0 m-2" t-if="pharmacy.permanenceState == 'permanence'">
                                                <i class="fa-solid fa-clock-rotate-left me-2"></i>in Permanence</span>
                                            <img t-att-src="'data:image/png;base64, ' + pharmacy.logo.decode('utf-8')" class="card-img-top img-fluid" alt="Pharmacy Logo"></img>
                                            <div class="card-body d-flex flex-column text-center">
                                                <h3 class="card-title">
                                                    <t t-esc="pharmacy.name" />
                                                </h3>
                                                <p class="card-text">
                                                    <p t-raw="pharmacy.description" />
                                                </p>
                                            </div>
                                            <ul class="list-group list-group-flush fw-bold">
                                                <li class="list-group-item">
                                                    <i class="fa-solid fa-location-crosshairs me-2"></i>
                                                    Neighborhood : <t t-esc="pharmacy.neighborhood.name" />
                                                </li>
                                                <li class="list-group-item">
                                                    <i class="fa-solid fa-city me-2"></i>
                                                    City : <t t-esc="pharmacy.city.name" />
                                                </li>
                                                <li class="list-group-item">
                                                    <i class="fa-solid fa-flag me-2"></i>
                                                    Country : <t t-esc="pharmacy.country.name" />
                                                </li>
                                                <li class="list-group-item">
                                                    <i class="fa-solid fa-phone me-2"></i>
                                                    Phone : <t t-esc="pharmacy.phone" />
                                                </li>
                                            </ul>
                                            <div class="card-footer text-center">
                                                <t t-if="pharmacy.permanenceState == 'permanence'">
                                                    <small class="text-muted">
                                                        <t t-esc="pharmacy.dateStartPermanence"/>
                                                    </small>
                                                </t>
                                                <t t-else="">
                                                    <small class="text-muted">
                                                        pharmacie not in permanence today
                                                    </small>
                                                </t>
                                            </div>
                                        </a>
                                    </div>
                                </t>
                            </div>
                        </t>
                    </div>
                    <div class="card-footer text-center">
                        <small class="text-muted">
                            <a class="text-decoration-none text-success" href="http://localhost:8069/web/login">
                                <i class="fa-solid fa-right-to-bracket me-2"></i>Login as Admin</a>
                        </small>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>

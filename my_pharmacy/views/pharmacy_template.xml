<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="pharmacy">
        <t t-name="website.layout">
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous"/>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
            <div class="bg-success p-5">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <a class="navbar-brand fw-bold text-success">PermaPharma</a>
                        <button class="btn btn-outline-success" type="submit">
                            <a link="http://localhost:8069/web/login">Login as Admin</a>
                        </button>
                    </div>
                    <div class="card-body text-center">
                        <div class="p-3">
                            <h1 class="card-title fw-bold display-4">Find Pharmacy Permanence Near You</h1>
                            <p class="card-text lead">Effortlessly Locate Pharmacies on Permanence Duty â€“ Ensuring Health Support When You Need It Most.</p>
                            <div class="input-group" style="max-width: 400px; margin: auto;">
                                <div class="input-group" style="max-width: 400px; margin: auto;">
                                    <form method="get" action="/pharmacy">
                                        <input type="text" class="form-control" placeholder="Search pharmacy by name, city..." name="search" aria-label="Search" t-att-value="search"/>
                                        <button type="submit" class="btn btn-success" onclick="this.form.action='/pharmacy?search=' + this.form.elements['search'].value + '&amp;search_in=Name';">Search</button>
                                        <button class="btn btn-outline-success dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">By</button>
                                        <ul class="dropdown-menu dropdown-menu-end" name="searchin">
                                            <li>
                                                <a class="dropdown-item" onclick="this.form.elements['search_in'].value='Name'">Name</a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item" onclick="this.form.elements['search_in'].value='City'">City</a>
                                            </li>
                                        </ul>
                                        <input type="hidden" name="search_in" value="Name"/>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="card-deck mt-2 row row-cols-1 row-cols-md-4 g-4">
                            <t t-foreach="pharmacies" t-as="pharmacy">
                                <div class="col">
                                    <div class="card mb-3 h-100 d-flex flex-fill">
                                        <img t-att-src="'data:image/png;base64, ' + pharmacy.logo.decode('utf-8')" class="card-img-top img-fluid" alt="..."></img>
                                        <div class="card-body d-flex flex-column">
                                            <h5 class="card-title">
                                                <t t-esc="pharmacy.name" />
                                            </h5>
                                            <p class="card-text">
                                                <p t-raw="pharmacy.description" />
                                            </p>
                                        </div>
                                        <ul class="list-group list-group-flush">
                                            <li class="list-group-item">
                                                <t t-esc="pharmacy.address" />
                                            </li>
                                            <li class="list-group-item">
                                                <t t-esc="pharmacy.city" />
                                            </li>
                                            <li class="list-group-item">
                                                <t t-esc="pharmacy.country.name" />
                                            </li>
                                            <li class="list-group-item">
                                                <t t-esc="pharmacy.phone" />
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </t>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>

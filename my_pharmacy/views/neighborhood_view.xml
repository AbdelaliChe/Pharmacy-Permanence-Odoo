<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id='pharmacy_neighborhood_action_form' model='ir.actions.act_window'>
        <field name="name">Pharmacy Neighborhood</field>
        <field name="res_model">pharmacy.neighborhood</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Pharmacy" id="pharmacy_main_menu" />
    <menuitem name="Neighborhoods" id="Pharmacy_neighborhood_menu" parent="pharmacy_main_menu" action="pharmacy_neighborhood_action_form"/>

    <record id="pharmacy_neighborhood_view_form" model="ir.ui.view">
        <field name="name">Pharmacy Neighborhood Form</field>
        <field name="model">pharmacy.neighborhood</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="city_id"/>
                </group>
            </form>
        </field>
    </record>

    <record id="pharmacy_neighborhood_action_list" model="ir.ui.view">
        <field name="name">Pharamcy Neighborhood List</field>
        <field name="model">pharmacy.neighborhood</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="city_id"/>
            </tree>
        </field>
    </record>
</odoo>
